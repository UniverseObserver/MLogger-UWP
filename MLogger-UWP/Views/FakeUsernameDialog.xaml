<ContentDialog
    x:Class="MLogger.Views.FakeUsernameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MLogger.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Fake Username"
    SecondaryButtonText="Set"
    SecondaryButtonClick="ContentDialog_ButtonClick">

    <StackPanel>
        <TextBox 
            x:Name="FakeUsernameTextBox" 
            Margin="0,10,0,10" 
            PlaceholderText="Displayed username"/>
        <TextBox 
            x:Name="RealUsernameTextBox" 
            Margin="0,0,0,0" 
            PlaceholderText="Actual username"/>
    </StackPanel>
</ContentDialog>
